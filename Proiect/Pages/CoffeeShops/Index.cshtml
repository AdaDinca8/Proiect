@page "/"
@model Proiect.Pages.CoffeeShops.IndexModel

@{
    ViewData["Title"] = "CoffeeShop";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
 <div class="form-actions no-color">
 <p>
 Gaseste cafea dupa brand:
 <input type="text" name="SearchString" value="@Model.CurrentFilter"/>
 <input type="submit" value="Search" class="btn btn-primary" /> |
 <a asp-page="./Index">Inapoi la lista</a>
 </p>
 </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoffeeShop[0].Coffee)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BrandSort">
                @Html.DisplayNameFor(model => model.CoffeeShop[0].Brand)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoffeeShop[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoffeeShop[0].Comanda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoffeeShop[0].CoffeeShopCategorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.CoffeeShopD.CoffeeShops)
        {
    string selectedRow = "";
            if (item.ID == Model.CoffeeShopID)
           {
               selectedRow = "table-success";
           }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Coffee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comanda.StatusComanda)
            </td>
                <td>
                    @{
                        foreach (var categorie in item.CoffeeShopCategorie)
                        {
                            @categorie.Categorie.ID @: @categorie.Categorie.NumeCategorie <br/>
                        }
                    }
             </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
